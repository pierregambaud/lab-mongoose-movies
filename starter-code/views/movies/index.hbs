<h1>Movies</h1>
<ul>
{{#each movies}}
  <li>
    <a href="/movies/{{_id}}">{{title}}</a>
    -
    <a href="/movies/{{_id}}/edit">Edit</a>
    -
    <form action="/movies/{{_id}}/delete" method="POST" class="delete">
      <button>Delete</button>
    </form>
  </li>
{{/each}}
</ul>
<a href="/movies/new">Create a new movie</a>