<h2>Celebrities</h2>
<ul>
{{#each celebrities}}
  <li>
    <a href="celebrities/{{_id}}">{{name}}</a>
    -
    <form action="/celebrities/{{_id}}/delete" method="POST" class="delete">
      <button type="submit">Delete</button>
    </form>
  </li>
{{/each}}
</ul>
<a href="celebrities/new">Create a new celebrity</a>
<a href="celebrities/edit">Edit a celebrity</a>