<h1>Celebrities</h1>
<ul>
{{#each celebrities}}
  <li>
    <a href="/celebrities/{{_id}}">{{name}}</a>
    -
    <a href="/celebrities/{{_id}}/edit">Edit</a>
    -
    <form action="/celebrities/{{_id}}/delete" method="POST" class="delete">
      <button>Delete</button>
    </form>
  </li>
{{/each}}
</ul>
<p><a href="/celebrities/new">Create a new celebrity</a> OR <a href="/">Back to the homepage</a></p>